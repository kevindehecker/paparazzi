<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="1.0" ground_alt="0" lat0="51.990634" lon0="4.376771" max_dist_from_home="15" name="Vision_drone" security_height="0.1">
  <header>
#include "autopilot.h"
#include "subsystems/electrical.h"
#include "modules/IC/IC_slave.h"
#include "guidance/guidance_h_ref.h"
#include "subsystems/ahrs/ahrs_aligner.h"
#include "subsystems/imu.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="-2.6" y="0.7"/>    
    <waypoint name="STDBY" x="-2.5" y="0.7"/>            
    <waypoint lat="51.9906235" lon="4.3768652" height="2." name="FA1"/>     
    <waypoint lat="51.9905905" lon="4.3767770" height="2." name="FA2"/>   
    <waypoint lat="51.9906456" lon="4.3767026" height="2." name="FA3"/>   
    <waypoint lat="51.9906852" lon="4.3767952" height="2." name="FA4"/>
    <waypoint name="GOAL" x="0.0" y="0.5"/>    
    <waypoint name="PREVGOAL" x="0.0" y="0.5"/>    
    <waypoint lat="51.9906190" lon="4.3767322" height="2." name="R2"/>  
    <waypoint lat="51.9906399" lon="4.3767861" height="2." name="R3"/>
    <waypoint lat="51.9906682" lon="4.3767512" height="2." name="R4"/>    
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
    <sector color="orange" name="Room">
      <corner name="FA3"/>
      <corner name="R2"/>
      <corner name="R3"/>
      <corner name="R4"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="!(ahrs_aligner.status == AHRS_ALIGNER_LOCKED)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
      <call fun="setBodyToImuCurrent()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="s" name="Start Engine">
	<exception cond="!GpsFixValid() || !(ahrs_aligner.status == AHRS_ALIGNER_LOCKED)" deroute ="Wait GPS"/>
	<call fun="NavResurrect()"/>
<!--      <set value="stateGetNedToBodyEulers_i()->psi" var="nav_heading"/>      -->
    <!--  <attitude pitch="0" roll="0" throttle="0" until="stage_time > 0.5" vmode="throttle"/> -->
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
	<exception cond="stateGetPositionEnu_f()->z > 0.0" deroute="Standby"/>
	<call fun="NavSetWaypointHere(WP_STDBY)"/>
	<stay climb="0.3" vmode="climb" wp="STDBY"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
  	<exception cond="GpsIsLost()" deroute="gps_lost"/> 
	<exception cond="electrical.bat_low" deroute="bat_low"/>
      	<exception cond="noDataCounter>50" deroute="no_IC_data"/>
	<call fun="NavSetWaypointHere(WP_STDBY)"/>
	<call fun="NavCopyWaypoint(WP_PREVGOAL,WP_STDBY)"/>
	<call fun="NavCopyWaypoint(WP_GOAL,WP_STDBY)"/>    
	<stay wp="STDBY"/>
    </block>
    <block key="g" name="heading_to_GOAL">
      <exception cond="GpsIsLost()" deroute="gps_lost"/>
      <exception cond="electrical.bat_low" deroute="bat_low"/> 
      <exception cond="noDataCounter>50" deroute="no_IC_data"/>     
      <call fun="nav_set_heading_towards_waypoint(WP_GOAL)"/>      
      <call fun="init_nav_heading()"/>
      <call fun="increase_nav_waypoint(WP_PREVGOAL,WP_GOAL,1)"/>   
      <!-- <call fun="NavSetWaypointHere(WP_PREVGOAL)"/> -->
      <stay until="stage_time > 0.1" wp="PREVGOAL"/>
    </block>
    <block name="route_to_GOAL">
      <exception cond="GpsIsLost()" deroute="gps_lost"/>
      <exception cond="electrical.bat_low" deroute="bat_low"/> 
      <exception cond="obstacle_detected==1" deroute="GoBackaBit"/>
      <exception cond="noDataCounter>50" deroute="no_IC_data"/>         
        <call fun="nav_set_heading_towards_waypoint(WP_GOAL)"/> 

      <while cond="obstacle_detected==0">
        <go from="PREVGOAL" hmode="route" wp="GOAL"/>
        <stay until="stage_time > 0.5" wp="GOAL"/>     
        <!-- <call fun="NavSetWaypointHere(WP_PREVGOAL)"/>  -->
        <call fun="NavCopyWaypoint(WP_PREVGOAL,WP_GOAL)"/>         
        <call fun="increase_nav_waypoint(WP_PREVGOAL,WP_GOAL,1)"/>  
      </while>      
    </block>


    <block name="GoBackaBit">
      <exception cond="GpsIsLost()" deroute="gps_lost"/>
      <exception cond="electrical.bat_low" deroute="bat_low"/> 
      <exception cond="noDataCounter>50" deroute="no_IC_data"/>    
      <!-- <call fun="NavSetWaypointHere(WP_STDBY)"/>       -->
      <!-- <call fun="goBackaBit(WP_STDBY,WP_PREVGOAL)"/>   -->
      <call fun="NavCopyWaypoint(WP_STDBY,WP_PREVGOAL)"/>
      <call fun="NavCopyWaypoint(WP_GOAL,WP_PREVGOAL)"/>

      <!-- <stay until="stage_time > 0.3" wp="PREVGOAL"/>  -->
    </block>

    <block key="t" name="TurnAway" pre_call="increase_nav_heading(0.05);increase_nav_waypoint(WP_PREVGOAL,WP_GOAL,1)">
      <exception cond="obstacle_detected==0" deroute="TurnaBitMore"/>
      <exception cond="GpsIsLost()" deroute="gps_lost"/>
       	<exception cond="electrical.bat_low" deroute="bat_low"/> 
      <exception cond="noDataCounter>50" deroute="no_IC_data"/>           
      <stay wp="PREVGOAL"/>
    </block>

    <block name="TurnaBitMore" > <!-- pre_call="increase_nav_heading(0.05)" -->
        <exception cond="GpsIsLost()" deroute="gps_lost"/>
       	<exception cond="electrical.bat_low" deroute="bat_low"/> 
      	<exception cond="obstacle_detected==1" deroute="TurnAway"/>
        <exception cond="noDataCounter>50" deroute="no_IC_data"/>              
      	<call fun="increase_nav_waypoint(WP_PREVGOAL,WP_GOAL,1)"/> 
	<call fun="nav_set_heading_towards_waypoint(WP_GOAL)"/>  
	<stay until="stage_time > 1" wp="PREVGOAL" />    
      	<deroute block="route_to_GOAL"/>
    </block>



    <block name="gps_lost">
      	<deroute block="flare"/>
    </block>

    <block name="bat_low">
      	<deroute block="land here"/>
    </block>

    <block name="no_IC_data">
        <exception cond="GpsIsLost()" deroute="gps_lost"/>
       	<exception cond="electrical.bat_low" deroute="bat_low"/> 
	<stay until="stage_time > 5" wp="STDBY" />    
      	<deroute block="land here"/>
    </block>

    <block key="l" name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
    </block>
    <block name="land">
<!--      <exception cond="GpsIsLost() && ((nav_stage>14) || (14> nav_stage) )" deroute="attitude_land"/> -->
      <go wp="STDBY"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="landed"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-1.0" until="stage_time > 3" vmode="climb" wp="STDBY"/>
    </block>
    <block name="landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="attitude_land">
      <attitude climb="-1.0" pitch="0" roll="0" until="stage_time >3" vmode="climb"/>
      <deroute block="landed"/>
    </block>
  </blocks>
</flight_plan>
