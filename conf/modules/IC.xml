          <dl_setting var="IC_turnStepSize"  min="0" step="1" max="360"   module="IC/IC_slave" shortname="Turn angle step size"/>
          <dl_setting var="IC_hysteresesDelayFactor"  min="0" step="1" max="100"   module="IC/IC_slave" shortname="Hystereses delay factor"/>

